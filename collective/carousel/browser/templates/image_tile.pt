<tal:block
    condition="exists:context/image"
    define="desc context/Description | nothing;
            image_scale request/carousel_image_scale|nothing;
            picture nocall:context/image">
    <img tal:attributes="src string:${context/absolute_url}/@@download/image/${picture/filename};
                         height picture/_height | nothing;
                         width picture/_width | nothing;"
        />
</tal:block>
